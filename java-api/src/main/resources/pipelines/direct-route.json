[
  {
    "$geoNear": {
      "key": "stops.location",
      "near": {
        "type": "Point",
        "coordinates": [
          ${lng}, ${lat}
        ]
      },
      "distanceField": "distance",
      "maxDistance": 500,
      "query": {},
      "includeLocs": "nearestStop",
      "spherical": true
    }
  },
  {
    "$set": {
      "startIndex": {
        "$indexOfArray": [
          "$stops.location",
          "$nearestStop"
        ]
      }
    }
  }
]