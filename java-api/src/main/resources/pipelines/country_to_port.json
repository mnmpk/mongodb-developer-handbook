[
    {
      $unwind: {
        path: "$ports"
      }
    },
    {
      $replaceRoot: {
        newRoot: {
          $mergeObjects: ["$ports", "$$ROOT"]
        }
      }
    },
    {
      $unset: ["_id", "ports"]
    },
    {
      $out: {
        db: "mongodb-developer",
        coll: "port_info"
      }
    }
  ]